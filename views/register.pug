extends nav
block append css
    style
      include ../static/register.css
block content
    .register
        .register1
            h2 CREATE ACCOUNT
            form(action='/register' method='post')
            .form-group
                input#yourname.form-control(type='text' name="name" placeholder='Enter your user name')
            .form-group
                input#yourpassword.form-control(type='password' name="password" placeholder='Enter your password')
                br
                input.btn.btn-primary(type='submit')
            p
                a(href='/') Already have an account? Login here        
